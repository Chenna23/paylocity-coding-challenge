@model Dependent

@{
    ViewBag.Title = "Edit Dependent";
    ViewBag.Header = "Edit Dependent";
}


<form asp-controller="Dependent" asp-action="EditDependent" method="post" class="mt-3">
    <input hidden asp-for="EmployeeId" />
    <input hidden asp-for="DependentId" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Relationship</label>
        <div class="col-sm-10">
            <select required="required" asp-for="RelationToEmployee" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<RelationToEmployee>()">
                <option value="">Please Select</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Employee" asp-action="Details"
               asp-route-id="@Model.EmployeeId" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>